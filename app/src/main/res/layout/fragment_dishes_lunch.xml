<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/wide_option_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorLunch">

                <ir.eynakgroup.diet.utils.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="صبحانه یک"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="6dp"
                    android:src="@mipmap/ic_grid"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/wide_option_text_padding"
                    android:layout_marginRight="@dimen/wide_option_text_padding">

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="خامه"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="۲ قاشق چای‌خوری"
                        android:textSize="@dimen/normal_text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/wide_option_text_padding"
                    android:layout_marginRight="@dimen/wide_option_text_padding">

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="عسل"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="۱ قاشق غذاخوری"
                        android:textSize="@dimen/normal_text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/wide_option_text_padding"
                    android:layout_marginRight="@dimen/wide_option_text_padding">

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="شیر کم‌چرب"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="۱ لیوان"
                        android:textSize="@dimen/normal_text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/wide_option_text_padding"
                    android:layout_marginRight="@dimen/wide_option_text_padding">

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="نان سنگک"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="۱ کف دست"
                        android:textSize="@dimen/normal_text_size" />
                </RelativeLayout>

                <View
                    android:id="@+id/option_guide_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#efeeee" />

                <ir.eynakgroup.diet.utils.view.CustomTextView
                    android:id="@+id/option_guide_tv"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="سبوس نان برای رژیم شما مفید است و در درمان ناراحتی معده به شما کمک می‌کند." />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/choose_option_btn"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="@string/choose" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@id/choose_option_btn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#efeeee" />

                <ir.eynakgroup.diet.utils.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorLunch"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="ناهار دو"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="کره"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="مربا"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="شیر کم‌چرب"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="نان سنگک"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/choose_option_btn_1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="@string/choose" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@id/choose_option_btn_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#efeeee" />

                <ir.eynakgroup.diet.utils.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorLunch"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="ناهار یک"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="کره"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="مربا"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="شیر کم‌چرب"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="نان سنگک"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/choose_option_btn_3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="@string/choose" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@id/choose_option_btn_3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#efeeee" />

                <ir.eynakgroup.diet.utils.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorLunch"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="ناهار چهار"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="کره"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="مربا"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="شیر کم‌چرب"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="نان سنگک"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/choose_option_btn_4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="@string/choose" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@id/choose_option_btn_4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#efeeee" />

                <ir.eynakgroup.diet.utils.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorLunch"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="ناهار سه"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="کره"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="مربا"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="شیر کم‌چرب"
                        android:textSize="@dimen/normal_text_size" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="نان سنگک"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLunch">


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/choose_option_btn_5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/choose"
                android:textColor="@color/colorWhite" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/choose_option_btn_5"
                android:background="#efeeee" />

            <ir.eynakgroup.diet.utils.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:padding="6dp"
                android:text="@string/didnt_adhere"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
