<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_orientation_margin"
    android:paddingLeft="@dimen/button_margin"
    android:paddingRight="@dimen/button_margin"
    android:paddingTop="@dimen/activity_orientation_margin"
    android:background="@android:color/white"
    tools:context=".activities.SignUpActivity$PlaceholderFragment">

    <include
        android:layout_marginTop="@dimen/activity_orientation_margin_2x"
        android:id="@+id/title"
        layout="@layout/layout_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <io.blackbox_vision.wheelview.view.WheelView
                    android:id="@+id/wheel_year"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    app:canLoop="false"
                    app:centerTextColor="@color/colorDescription"
                    app:drawItemCount="5"
                    app:initPosition="75"
                    app:lineColor="@color/colorDescription"
                    app:textSize="16sp"
                    app:topBottomTextColor="@color/colorEditText"/>

                <io.blackbox_vision.wheelview.view.WheelView
                    android:id="@+id/wheel_month"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:canLoop="true"
                    android:layout_gravity="center_horizontal"
                    app:centerTextColor="@color/colorDescription"
                    app:drawItemCount="5"
                    app:initPosition="1"
                    android:layout_marginLeft="@dimen/activity_orientation_margin"
                    android:layout_marginRight="@dimen/activity_orientation_margin"
                    app:lineColor="@color/colorDescription"
                    app:textSize="16sp"
                    app:topBottomTextColor="@color/colorEditText"/>

                <io.blackbox_vision.wheelview.view.WheelView
                    android:id="@+id/wheel_day"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:canLoop="true"
                    app:centerTextColor="@color/colorDescription"
                    app:drawItemCount="5"
                    app:initPosition="1"
                    app:lineColor="@color/colorDescription"
                    app:textSize="16sp"
                    app:topBottomTextColor="@color/colorEditText"/>

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
