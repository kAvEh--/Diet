                    android:scaleType="centerInside" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/c_21"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg"
                    android:scaleType="centerInside" />

                <View
