    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeeee"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ir.eynakgroup.diet.activities.fragments.ProfileFragment"
    tools:showIn="@layout/fragment_profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/profile_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/gradient_bg_rounded"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/diet_level_img"
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/level_1" />

                <ir.eynakgroup.diet.utils.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="درجه سختی"
                    android:textColor="#fff"
                    android:textSize="20dp" />

            </LinearLayout>

            <ir.eynakgroup.diet.utils.view.CustomTextView
                android:id="@+id/profile_diet_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="رژیم تمام شده است"
                android:textColor="#000"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/c_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg"
                    android:scaleType="centerInside" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/c_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg"
