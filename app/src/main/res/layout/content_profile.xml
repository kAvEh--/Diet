                <ImageView
                    android:id="@+id/c_24"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/c_25"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg"
                    android:scaleType="centerInside" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/c_26"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg"
                    android:scaleType="centerInside" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/c_27"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg"
                    android:scaleType="centerInside" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/c_28"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg"
                    android:scaleType="centerInside" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/c_29"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg"
                    android:scaleType="centerInside" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/c_30"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <ir.eynakgroup.diet.utils.view.CustomTextView
                android:id="@+id/profile_diet_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="12dp">

                <ir.eynakgroup.diet.utils.view.CustomTextView
                    android:id="@+id/begin_weight_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/begin_weight_label"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <View
                        android:id="@+id/second_bar_label"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:id="@+id/current_weight_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#000"
                        android:textSize="16dp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ir.eynakgroup.diet.utils.view.CustomTextView
                    android:id="@+id/begin_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rounded_bg_blue"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#fff"
                    android:textSize="16dp" />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/pb"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/begin_weight"
                    app:rcBackgroundColor="#b9b9b9"
                    app:rcMax="100"
                    app:rcProgress="40"
                    app:rcProgressColor="@color/colorLunch"
                    app:rcRadius="5dp"
                    app:rcReverse="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/begin_weight"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <View
                        android:id="@+id/second_bar"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1" />

                    <ir.eynakgroup.diet.utils.view.CustomTextView
                        android:id="@+id/current_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_bg_green"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="وزن فعلی"
                        android:textColor="#fff"
                        android:textSize="16dp" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <ir.eynakgroup.diet.utils.view.CustomTextView
            android:id="@+id/profile_nothing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="هیچ رژیمی ندارید."
            android:textColor="#8c8c8c"
            android:textSize="22sp"
            android:visibility="gone" />
    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
