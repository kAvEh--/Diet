<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_button2"
            android:text="@string/signup"
            android:layout_marginBottom="@dimen/indicator_padding"
            android:layout_marginTop="@dimen/button_margin"
            android:textColor="@color/colorBlue"
            android:textSize="20sp"
            />


        <Button
            android:id="@+id/btn_enter_karafs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/btn_signup"
            android:background="@drawable/background_button"
            android:text="@string/enter_karafs"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />




        <Button
            android:visibility="invisible"
            android:id="@+id/btn_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_button"
            android:text="@string/enter"
            android:layout_marginBottom="@dimen/indicator_padding"
            android:layout_marginTop="@dimen/indicator_padding"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />


    </RelativeLayout>

</LinearLayout>